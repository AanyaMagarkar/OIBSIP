import java.util.Scanner;

public class LibraryManagementSystem {
    public LibraryManagementSystem() {
    }

    public static void main(String[] args) {
        Library library = new Library();
        Scanner scanner = new Scanner(System.in);
        library.addBook("Gone Girl By Gillian Flynn");
        library.addBook("One Arranged Murder By Chetan Bhagat");
        library.addBook("No Exit By Taylor Adams");
        library.addBook("Promise By Nikita Singh");
        library.addMagazine("National Geographic");
        library.addMagazine("Food Network Magazine");
        library.addMagazine("Popular Mechanics");
        library.addMagazine("Fitness");

        int choice;
        do {
            System.out.println("Library Management System");
            System.out.println("1. Add Book");
            System.out.println("2. Add Magazine");
            System.out.println("3. Order Book");
            System.out.println("4. Order Magazine");
            System.out.println("5. Display Existing Books");
            System.out.println("6. Display Existing Magazines");
            System.out.println("7. Total Books Sold");
            System.out.println("8. Total Magazines Sold");
            System.out.println("9. Exit");
            System.out.print("Enter your choice: ");
            choice = scanner.nextInt();
            String bookTitle;
            String magazineTitle;
            switch (choice) {
                case 1:
                    System.out.print("Enter book title: ");
                    scanner.nextLine();
                    bookTitle = scanner.nextLine();
                    library.addBook(bookTitle);
                    break;
                case 2:
                    System.out.print("Enter magazine title: ");
                    scanner.nextLine();
                    magazineTitle = scanner.nextLine();
                    library.addMagazine(magazineTitle);
                    break;
                case 3:
                    System.out.println("Enter Book Title: ");
                    scanner.nextLine();
                    bookTitle = scanner.nextLine();
                    library.orderBook();
                    break;
                case 4:
                    System.out.println("Enter Magazine Title: ");
                    scanner.nextLine();
                    magazineTitle = scanner.nextLine();
                    library.orderMagazine();
                    break;
                case 5:
                    library.displayBooks();
                    break;
                case 6:
                    library.displayMagazines();
                    break;
                case 7:
                    System.out.println("Total books sold: " + library.getTotalBooksSold());
                    break;
                case 8:
                    System.out.println("Total magazines sold: " + library.getTotalMagazinesSold());
                    break;
                case 9:
                    System.out.println("Exiting...");
                    break;
                default:
                    System.out.println("Invalid choice. Please try again.");
            }
        } while(choice != 9);

        scanner.close();
    }
}
